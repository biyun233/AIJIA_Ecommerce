@model AIJIA.Models.RegisterViewModel
@{
    ViewBag.Title = "L'inscription";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h3>Créer mon compte</h3>
        <div class="col-md-offset-5 col-md-7">
            <p>* Champ Obligatoire</p>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group ">
            <div class="col-md-offset-4 col-md-4">
                <div class="row">
                    <p>
                        &nbsp;&nbsp;&nbsp;Civilité * &nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.Sex, "Mlle.") Mlle.&nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.Sex, "Mme.") Mme.&nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.Sex, "M.") M. &nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.Sex, "Autre") Autre. &nbsp;&nbsp;
                        @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                    </p>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-4">
                @Html.EditorFor(model => model.Lastename, new { htmlAttributes = new { @class = "form-control no-border", @placeholder = "Nom *" } })
                @Html.ValidationMessageFor(model => model.Lastename, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-4">
                @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control no-border", @placeholder = "Prénom *" } })
                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-4">
