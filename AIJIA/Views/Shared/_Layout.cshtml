@using AIJIA.Models;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AIJIA </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid header">
        <div class="row message">
            <div>
                <span class="align-middle">AIJIA - Découvrez notre nouvelle collection!</span>
            </div>
        </div>
        <div class="row logobar">
            <div class="container" style="padding-bottom:2px;">
                <div class="col-md-4 ">
                    <a href="/Home/Index" title="AIJIA" class="home_icon">
                        AIJIA
                    </a>
                </div>
                <div class="col-md-4">
                    <form class="form-inline">
                        <input class="form-control no-border" type="search" placeholder="Rechercher un article" />
                        <span class="glyphicon glyphicon-search"></span>
                    </form>
                </div>
                <div class="col-md-4">
                    <ul class="nav navbar-nav navbar-right icon">
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>
                        <li>
                            <a data-toggle="dropdown" href="#" style="margin-bottom:8px;">
                                <span class="glyphicon glyphicon-shopping-cart"></span>
                                <span style="margin-left:11px;">Panier</span>
                            </a>
                            <ul class="dropdown-menu">
                                @if (Session["cart"] != null)
                                {
                                    foreach (CartItem item in (List<CartItem>)Session["cart"])
                                    {
                                        <li>
                                            <a class="cart_title" href="@Url.Action("RemoveFromCart","Home", new { ArticleId = item.Article.ArticleId })">
                                                <span>@item.Article.Name (@item.Quantity)</span>
                                                <span class="glyphicon glyphicon-remove remove"></span>
                                            </a>
                                        </li>
                                    }
                                }
                                <li class="divider"></li>
                                <li><a href="/Home/Cart" title="panier" class="cart_title">
                                        Voir Panier
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row menu">
            <div class="navbar-collapse">
                <ul class="nav navbar-nav collect">
                    <li>@Html.ActionLink("Canapés", "Articles_type", "Articles", routeValues: new { type = "Canapés" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("Chaises", "Articles_type", "Articles", routeValues: new { type = "Chaises" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("Tables", "Articles_type", "Articles", routeValues: new { type = "Tables" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("Lits", "Articles_type", "Articles", routeValues: new { type = "Lits" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("Luminaires", "Articles_type", "Articles", routeValues: new { type = "Luminaires" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("Déco", "Articles_type", "Articles", routeValues: new { type = "Déco" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("Jardin", "Articles_type", "Articles", routeValues: new { type = "Jardin" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("Meubles", "Articles_type", "Articles", routeValues: new { type = "Meubles" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("Admin", "Admin", "Admin")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mon application ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>