@model IEnumerable<AIJIA.Models.Order>
@using Microsoft.AspNet.Identity;
@using System.Security.Claims;
@using AIJIA.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ProfilLayout.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();

}




<div class="row container">
    <div class="col-md-8">
        <div class="">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>
                            Date
                        </th>
                        <th>
                            Client
                        </th>
                        <th>
                            Facture
                        </th>
                        <th>
                            M. Livraison
                        </th>

                        <th>
                            M. Total
                        </th>
                       
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        var user = db.Users.Find(item.UserID);
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOrder)
                            </td>
                            <td>
                                @user.Lastename
                            </td>
                            <td>
                                <a class="btn btn-default btn-sm" id="@item.ID" onclick="Details(this.id)">Voir</a>
                                @*@Html.ActionLink("Voir", "Details", new { id = item.ID })*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AmountDelivery)€
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)€
                            </td>
                            

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="myModal" role="document">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">FACTURE</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">FERMER</button>
            </div>
        </div>
    </div>
</div>





@section scripts{
    <script>
        function Details(id) {
            $.get("@Url.Action("ShowpopUp","Orders")/" + id,
                function (data) {
                    $('.modal-body').html(data);
                });

                $("#myModal").modal("show");
        }

      


    </script>
}








