@model AIJIA.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Changer le mot de passe";
    Layout = "~/Views/Shared/_ProfilLayout.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="col-md-offset-2 col-md-4 mdp_box">
            <h4>Modification de Mot de Passe</h4>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control no-border", @placeholder = "Mot de passe actuel *" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control no-border", @placeholder = "Nouveau mot de passe" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control no-border", @placeholder = "confirmation mot de passe" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-4">
                    <input type="submit" value="Enregistrer" class="btn btn-submit" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}