@using Microsoft.AspNet.Identity
@using System.Security.Claims;
@model AIJIA.Models.ChangeProfilViewModel
@{
    ViewBag.Title = "ChangeProfil";
    Layout = "~/Views/Shared/_ProfilLayout.cshtml";
    var user = (System.Security.Claims.ClaimsIdentity)User.Identity;
}

@using (Html.BeginForm("ChangeProfil", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="col-md-offset-2 col-md-4 mdp_box">
            <h4>Modification de Profil</h4>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.EditorFor(m => m.Firstname, new { htmlAttributes = new { @class = "form-control no-border", @value = @user.FindFirstValue("Firstname"), @placeholder = @user.FindFirstValue("Firstname") } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.EditorFor(m => m.Lastename, new { htmlAttributes = new { @class = "form-control no-border", @value = @user.FindFirstValue("Lastname"), @placeholder = @user.FindFirstValue("Lastname") } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control no-border", @value = @user.FindFirstValue("Phone"), @placeholder = @user.FindFirstValue("Phone") } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control no-border", @value = @User.Identity.Name, @placeholder = @User.Identity.Name } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-4">
                    <input type="submit" value="Enregistrer" class="btn btn-submit" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/jqueryval")
}