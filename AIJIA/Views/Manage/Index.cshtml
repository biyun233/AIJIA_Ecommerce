
@using Microsoft.AspNet.Identity
@using System.Security.Claims;
@model AIJIA.Models.IndexViewModel
@{
    ViewBag.Title = "Gérer";
    Layout = "~/Views/Shared/_ProfilLayout.cshtml";
    var user = (System.Security.Claims.ClaimsIdentity)User.Identity;
}


<div class="container">
    <div class="col-md-offset-3 col-md-9" style="top:-500px;">
        <p style="text-decoration:underline;">Mon Profil</p>

    </div>
    <div class="col-md-offset-3 col-md-5 profil_content" style="top:-490px;">
        <div class="row" style="padding-top: 20px;padding-left: 20px;">
            <p>
                @user.FindFirstValue("Sex")
                @user.FindFirstValue("Firstname")
                @user.FindFirstValue("Lastname")
            </p>
        </div>
        <div class="row" style="padding-left: 20px;">
            <p>
                Email:
                @Html.DisplayFor(x => User.Identity.Name)
            </p>
        </div>
        <div class="row" style="padding-left: 20px;">
            <p>
                Tel:
                @user.FindFirstValue("Phone")
            </p>
        </div>
        <div class="row" style="padding-left: 20px;">
            <p>
                Date de naissance:
                @user.FindFirstValue("Birthday")
            </p>
        </div>
        <div class="row" style="padding-left: 20px;">
            <a href="/Manage/ChangeProfil">Modifier</a>
        </div>
    </div>
    <div class="col-md-offset-3 col-md-9" style="top:-450px;">
        <p style="text-decoration:underline;">Carnet d'adress</p>

    </div>
    <div class="col-md-offset-3 col-md-5 profil_content" style="top:-440px;">
        <div class="row" style="padding-top: 20px;padding-left: 20px;">
            <p>
                @user.FindFirstValue("Sex")
                @user.FindFirstValue("Firstname")
                @user.FindFirstValue("Lastname")           
            </p>
        </div>
        <div class="row" style="padding-left: 20px;">
            <p>
                @user.FindFirstValue("Address")
            </p>
        </div>
        <div class="row" style="padding-left: 20px;">
            <p>
                @user.FindFirstValue("PostalCode")
                @user.FindFirstValue("City")
            </p>
        </div>
        <div class="row" style="padding-left: 20px;">
            <p>
                @user.FindFirstValue("Phone")
            </p>
        </div>
        <div class="row" style="padding-left: 20px;">
            <a href="/Manage/ChangeAddress">Modifier</a>
        </div>

    </div>
</div>
